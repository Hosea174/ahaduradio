---
import { Icon } from "astro-icon/components";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
// styles
import "../styles/pages/_index.scss";
// assets
import heroImage from "../assets/hero-carousel.png";
import Link from "../components/Link.astro";
---

<Layout title="አሐዱ ሬዲዮ እና ቴሌቪዥን - ኤፍ ኤም 94.3">
  <Header />
  <main>
    <section class="hero-section">
      <div class="container wrapper">
        <div class="carousel">
          <div class="carousel-wrapper">
            <div class="news-description">
              <div class="news-meta">
                <div class="label">ሳምንታዊ ዜናዎች</div>
                <div class="date-wrapper">
                  <Icon name="calendar" />
                  <span class="release-date">02/03/2017</span>
                </div>
              </div>

              <h1 class="font-header-1 headline">
                የቡና ኤክስፖርት በ2016 ዓ.ም ከ200 ሚሊዮን ዶላር በላይ ማስገኘቱን የኢትፖጵያ ኢምፖርት
                ኤክስፖርት ባለስልጣን የሆኑት አቶ አሸናፊ መኮንን ገለጹ
              </h1>
              <p class="sub-headline">
                የቡና ኤክስፖርት በ2016 ዓ.ም ከ200 ሚሊዮን ዶላር በላይ ማስገኘቱን የኢትፖጵያ ኢምፖርት
                ኤክስፖርት ባለስልጣን የሆኑት አቶ አሸናፊ መኮንን የላዳ አሽከርካሪዎች ተገልጋዮችን ለማሳፈር
                በምንቆምበት ሁሉ አትችሉም እየተባልን ተቸግረናል ሲሉ ለአሀዱ ተናግረዋል፡፡
              </p>
              <Link text="ዝርዝር ዜና" icon="open-link" class="read-more"/>
            </div>
            <div class="img-wrapper">
              <Image src={heroImage} alt="hero image"/>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
